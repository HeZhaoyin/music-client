
.lrc-content-box {
  height: 500rpx;
  margin-top: 30rpx;
  overflow: hidden;
  -webkit-mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 20%,
    black 80%,
    transparent 100%
  );
          mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 20%,
    black 80%,
    transparent 100%
  );
  transition: all 0.4s linear;
}
.lrc-text-list-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.4s linear;
  position: relative;
  top: 250rpx;
}
.lrc-text {
  font-size: 36rpx;
  color: rgb(105, 105, 105);
  transition: color 0.6s linear;
}
.lrc-active {
  color: white;
}
